[user]
	email = eickstaedt@deicon.de
	name = Dieter Eickstaedt
[push]
	default = simple
[branch]
	autosetuprebase = always
[color]
  ui = true
  diff = auto
	status = auto
  branch = auto
[color "branch"]
 current = yellow reverse
 local = yellow
 remote = green
[color "diff"]
 meta = yellow bold
 frag = magenta bold
 old = red bold
 new = green bold
[color "status"]
 added = yellow
 changed = green
 untracked = cyan
[merge]
	tool = vimdiff
[core]
	excludesfile = /Users/dieter/.gitignore_global
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true

[alias]
	lol = log --decorate --oneline --graph --all
[apply]
	whitespace = nowarn
